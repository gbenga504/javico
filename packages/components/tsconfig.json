{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "declaration": true,
        "outDir": "./lib",
        "jsx": "react",
        "isolatedModules": true,
        "noImplicitAny": false
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "./**/*.test.ts",
        "./**/*.test.tsx",
        "./**/*.stories.tsx",
        "lib/"
    ]
}